<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp" >

    <RelativeLayout
        android:id="@+id/grid_view2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal"
        android:gravity="center"
        android:padding="20dp" >

        <RelativeLayout
            android:id="@+id/grid1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_left"
            android:gravity="center|bottom" >

            <TextView
                android:id="@+id/txt_etat_non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="20dp"
                android:text="@string/etat_non"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/grid1"
            android:background="@drawable/top_right"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/txt_etat_neuf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="7dp"
                android:paddingTop="7dp"
                android:text="@string/etat_neuf"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid1"
            android:background="@drawable/mid_left"
            android:gravity="left" >

            <TextView
                android:id="@+id/txt_etat_hors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:clickable="true"
                android:gravity="left"
                android:paddingLeft="7dp"
                android:text="@string/etat_hors"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid2"
            android:layout_toRightOf="@+id/grid3"
            android:background="@drawable/mid_rigth"
            android:gravity="center|right" >

            <TextView
                android:id="@+id/txt_etat_bon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingRight="3dp"
                android:paddingTop="5dp"
                android:text="@string/etat_bon"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid3"
            android:background="@drawable/bottom_left"
            android:gravity="center|right" >

            <TextView
                android:id="@+id/txt_etat_mauvais"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="left"
                android:paddingBottom="7dp"
                android:paddingRight="7dp"
                android:text="@string/etat_mauvais"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/grid6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/grid4"
            android:layout_toRightOf="@+id/grid5"
            android:background="@drawable/bottom_right"
            android:gravity="center|left" >

            <TextView
                android:id="@+id/txt_etat_usage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:gravity="left"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:text="@string/etat_usage"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size10"
                android:textStyle="bold" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>