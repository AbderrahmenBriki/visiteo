<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mis2_layout"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeightSmall"
    android:layout_marginTop="1dip"
    android:background="@color/white"
    android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView 
                android:id="@+id/ent_element_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="@string/ent_element"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_type_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="2.3"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp" 
                android:paddingTop="5dp"
                android:text="@string/ent_type"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_qtel_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.7"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_qte"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_etat_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.8"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_etat"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_obervations_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="3.8"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="@string/ent_obervations"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_photo_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_photo"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_tr_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.81"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_tr"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />
            
            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_tr_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="0.81"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_nt"
                android:visibility="visible"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:visibility="visible"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

            <TextView
                android:id="@+id/ent_action_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1.3"
                android:visibility="gone"
                android:background="@color/light_bg"
                android:gravity="left"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="@string/ent_action"
                android:textColor="@color/black"
                android:textSize="@dimen/mis_val_size"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="@dimen/stroke_dim"
                android:layout_height="fill_parent"
                android:background="@color/light_line"
                android:contentDescription="@string/img" />

</LinearLayout>