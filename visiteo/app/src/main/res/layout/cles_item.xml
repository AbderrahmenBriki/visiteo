<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mis2_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_line"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/tablerow"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="6" >

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />
        
        <ImageView
            android:id="@+id/delete_key"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:src="@drawable/minus_cion" />

        <Spinner
            android:id="@+id/cles_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.8"
            android:entries="@array/array_clefs"
            android:padding="3dp" />

        <ImageView
            android:id="@+id/stroke1"
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/minus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/img"
                android:src="@drawable/minus_cion" />

            <TextView
                android:id="@+id/cles_verifiees"
                android:layout_width="@dimen/mis_column1"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textColor="@color/black1"
                android:textSize="@dimen/mis_item_size" />

            <ImageView
                android:id="@+id/pluse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/img"
                android:src="@drawable/add_cion" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.9"
            android:gravity="center_vertical|center_horizontal"
            android:orientation="horizontal"
            android:padding="3dp" >

            <ImageView
                android:id="@+id/minus1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/img"
                android:src="@drawable/minus_cion" />

            <TextView
                android:id="@+id/cles_nonverifiees"
                android:layout_width="@dimen/mis_column1"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:text="0"
                android:textColor="@color/black1"
                android:textSize="@dimen/mis_item_size" />

            <ImageView
                android:id="@+id/pluse1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:contentDescription="@string/img"
                android:src="@drawable/add_cion" />
        </LinearLayout>

        <ImageView
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />

        <TextView
            android:id="@+id/cls_total"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.6"
            android:gravity="center"
            android:padding="3dp"
            android:text="0"
            android:textColor="@color/black1"
            android:textSize="@dimen/mis_item_size" />

        <ImageView
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="3dp" >

            <CheckBox
                android:id="@+id/cls_hs"
                android:layout_width="wrap_content"
                android:clickable="true"
                android:layout_height="fill_parent" />
        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />

        <EditText
            android:id="@+id/commentKey_EditText"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1.3"
            android:gravity="left"
            android:inputType="textCapSentences"
            android:padding="3dp"
            android:singleLine="true"
            android:textColor="@color/black1"
            android:textSize="@dimen/mis_item_size" />

        <ImageView
            android:layout_width="@dimen/stroke_dim"
            android:layout_height="fill_parent"
            android:background="@color/light_line"
            android:contentDescription="@string/img" />
    </LinearLayout>

</LinearLayout>