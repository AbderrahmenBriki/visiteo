            android:padding="@dimen/cell_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="right"
            android:padding="@dimen/cell_padding"
            android:text="@string/tb_immeuble"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/immeuble_TextView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="left"
            android:padding="@dimen/cell_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="right"
            android:padding="@dimen/cell_padding"
            android:text="@string/tb_proprietaire"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/proprietaireval"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="left"
            android:padding="@dimen/cell_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="right"
            android:padding="@dimen/cell_padding"
            android:text="@string/tb_lot"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/lot_TextView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="left"
            android:padding="@dimen/cell_padding"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black"
            android:textStyle="bold" />

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="right"
            android:padding="@dimen/cell_padding"
            android:text="@string/tb_mandat"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/mandat_TextView"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:background="@drawable/border_white"
            android:gravity="left"
            android:padding="@dimen/cell_padding"
